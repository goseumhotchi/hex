{
    "name": "hex",
    "version": "1.0.0",
    "description": "HEX editor",
    "main": "./js/main.js",
    "scripts": {
        "start": "SET ELECTRON_ENV=dev && electron ./js/main.js",
        "debug": "SET ELECTRON_ENV=dev && electron --nolazy --inspect-brk=9229 ./js/main.js",
        "pack": "build --dir",
        "dist": "build -w",
        "postinstall": "electron-builder install-app-deps"
    },
    "repository": {
        "type": "git",
        "url": "."
    },
    "author": "gshot",
    "license": "MIT",
    "dependencies": {
        "chalk": "^2.4.1",
        "jquery": "^3.3.1",
        "lodash": "^4.17.11",
        "lokijs": "^1.5.5",
        "quill": "^1.3.6",
        "quill-focus": "^1.1.1",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "babel-cli": "^6.26.0",
        "babel-core": "^6.26.3",
        "babel-eslint": "^10.0.1",
        "babel-plugin-transform-builtin-extend": "^1.1.2",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "cross-env": "^5.2.0",
        "electron": "^3.0.12",
        "electron-builder": "^20.38.3",
        "eslint": "^5.9.0"
    },
    "build": {
        "productName": "HEX",
        "appId": "gshot.HEX",
        "win": {
            "target": [
                "portable"
            ],
            "icon": "./icons/png/icon.png",
            "artifactName": "hex_portable.exe"
        },
        "portable": {
            "artifactName": "hex_portable.exe"
        },
        "directories": {
            "output"        : "./dist",
            "app"           : ".",
            "buildResources": "."
        },
        "extraFiles": [
            "./img/trayicon.png"
        ]
    }
}
